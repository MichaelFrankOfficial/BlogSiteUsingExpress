<% include partials/head %>
    <main>
        <link rel="stylesheet" href="http://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.1.0/css/font-awesome.min.css" />
        <div class="container" style="margin-top:1.5em;">
            <% for(var i = 0; i < posts.length; i++){ %>
                <div class="well">
                    <div class="media">
                        <div class="media-body">
                            <h4 class="media-heading">
                                <a href="/post/<%= posts[i].permalink %>">
                                    <%= posts[i].title %>
                                </a>
                            </h4>
                            <p class="text-right">Author: <%= posts[i].author %></p>
                            <p>
                                <%- posts[i].postContent %>
                            </p>
                            <ul class="list-inline list-unstyled">
                                <li>
                                    <span>
                                        <i class="glyphicon glyphicon-calendar"></i>
                                        <%= Date.now() %>
                                    </span>
                                </li>
                                <li>|</li>
                                <li>
                                    <span>
                                        <i class="fa fa-facebook-square"></i>
                                    </span>
                                    <span>
                                        <i class="fa fa-twitter-square"></i>
                                    </span>
                                    <span>
                                        <i class="fa fa-google-plus-square"></i>
                                    </span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <% } %>
                    <h2>Add to Blog!</h2>
                    <form action="/newpost" method="POST">
                        <fieldset>
                            <legend>Create Blog Post</legend>
                            <div class="row-blog-form">
                                <div class="col">
                                    <div class="form-group mb-2">
                                        <input class="form-control" type="text" name="title" id="title" autofocus="true" placeholder="Blog Post Title">
                                    </div>
                                    <div class="form-group mb-2">
                                        <input class="form-control" type="text" name="permalink" id="permalink" autofocus="true" placeholder="Blog Post Permalink">
                                    </div>
                                    <div class="form-group mb-2">
                                        <input class="form-control" type="text" name="author" id="author" autofocus="true" placeholder="Blog Post Author">
                                    </div>
                                    <div class="form-group mb-2">
                                        <input class="form-control" type="password" name="passphrase" id="passphrase" autofocus="true" placeholder="Enter Your Passphrase">
                                    </div>
                                    <div class="form-group mb-2">
                                        <textarea id="postContent" name="postContent"></textarea>
                                    </div>
                                    <div class="form-group mb-2 text-center">
                                        <button class="btn btn-dark" type="submit" style="width:10em; ">Post</button>
                                    </div>
                                </div>
                            </div>
                        </fieldset>
                    </form>
    </main>
    <% include partials/foot %>