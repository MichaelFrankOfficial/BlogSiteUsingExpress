<% include partials/head %>
    <div class="container-fluid h-100">
        <div class="col" id="contact-mailing-info">
            <h2 class="h2About">Contact Info: </h2>
            <p>
                Michael Frank
                <br /> 123 6th St.
                <br /> Melbourne, FL 32904
                <br /> United States
            </p>
            <p>Cell # : 202-555-0156</p>
        </div>
        <form id="email-form">
            <fieldset>
                <legend>General Inquires</legend>
                <div>
                    <div class="email-form-row">
                        <div class="col">
                            <div class="form-group mb-2">
                                <input class="form-control" type="text" id="email-name" autofocus="true" placeholder="Enter Name">
                            </div>
                            <div class="form-group mb-2">
                                <input class="form-control" type="text" id="email-address" autofocus="true" placeholder="Enter Email">
                            </div>
                            <div class="form-group mb-2">
                                <input class="form-control" type="text" id="email-subject" autofocus="true" placeholder="Enter Subject">
                            </div>
                            <div class="form-group mb-2">
                                <input class="form-control" type="text" id="email-body" autofocus="true" placeholder="Enter Message">
                            </div>
                            <div>
                                <button class="btn btn-dark" type="button" id="btnSubmitEmail">Submit Email</button>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
